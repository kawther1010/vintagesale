<%- include ("./partials/header") %>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a
                    href="#personal-information"
                    class="list-group-item list-group-item-action active"
                    >Previous obejcts</a
                >
                <a
                    href="#security"
                    class="list-group-item list-group-item-action"
                    >Previous bids</a
                >
            </div>
        </div>
        <div class="col-md-9">
            <div class="tab-content">
                <div class="tab-pane active" id="personal-information">
                    <h3>Previous objects:</h3>
                    <%- include ("./partials/messages"); %>
                    <div>
                        <% if (objects && objects.length > 0) { %>
                        <div class="category-container">
                            <div class="object-list">
                                <% objects.forEach((object) => { %>
                                <a
                                    href="/objects/<%= object._id %>"
                                    style="color: inherit; text-decoration: none"
                                >
                                    <div class="object-container">
                                        <div class="object-image-container">
                                            <img
                                                src="<%= '/uploads/' + object.image %>"
                                                alt="<%= object.title %>"
                                            />
                                        </div>
                                        <div class="object-details-container">
                                            <h2 class="object-title"><%= object.title %></h2>
                                            <p class="object-description">
                                                <%= object.description %>
                                            </p>
                                            <p class="object-price">
                                                <%= object.startingPrice %> DZD
                                            </p>
                                        </div>
                                    </div>
                                </a>
                                <% }); %>
                            </div>
                        </div>
                        <% } else { %>
                            <br><br><br><br>
                            <h1 class="category-title">You haven't posted any object</h1>
                        <% } %>
                    </div>

                </div>
                <div class="tab-pane" id="security">
                    <h3>Previous bids:</h3>
                    <%- include ("./partials/messages"); %>

                    <div>
                        <% if (objectsForBids && objectsForBids.length > 0) { %>
                          <div class="category-container">
                            <div class="object-list">
                              <% objectsForBids.forEach((objectsForBid) => { %>
                                <a href="/objects/<%= objectsForBid._id %>" style="color: inherit; text-decoration: none">
                                  <div class="object-container">
                                    <% objectsForBid.bids.forEach((bid) => { %>
                                      <h2>Your bid was: <%= bid.amount %> </h2>
                                    <% }); %>
                                    <div class="object-image-container">
                                      <img src="/uploads/<%= objectsForBid.image %>" alt="<%= objectsForBid.title %>">
                                    </div>
                                    <div class="object-details-container">
                                      <h2 class="object-title"><%= objectsForBid.title %></h2>
                                      <p class="object-description"><%= objectsForBid.description %></p>
                                      <p class="object-price"><%= objectsForBid.startingPrice %> DZD</p>
                                    </div>
                                  </div>
                                </a>
                              <% }); %>
                            </div>
                          </div>
                        <% } else { %>
                          <br><br><br><br>
                          <h1 class="category-title">You haven't posted any object</h1>
                        <% } %>
                      </div>                      

                </div>
            </div>
        </div>
    </div>
</div>
<%- include ("./partials/footer") %>


<style>
    .category-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .category-title {
        margin-top: 10px;
        font-size: 36px;
        font-weight: bold;
        text-align: center;
    }

    .object-list {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        grid-gap: 20px;
    }

    .object-container {
        background-color: #fff;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        border-radius: 5px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .object-container:hover {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        cursor: pointer;
    }

    .object-image-container {
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .object-image-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .object-details-container {
        padding: 20px;
    }

    .object-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .object-description {
        margin-bottom: 10px;
    }

    .object-price {
        font-size: 20px;
        font-weight: bold;
    }
</style>
