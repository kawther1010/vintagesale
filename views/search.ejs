<%- include ("./partials/header") %>
<div>
    <br><br>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 d-flex justify-content-center">
                <form action="/search" method="post">
                    <div class="form-group">
                        <label for="title"><h3>Search for something</h3></label>
                        <br>
                        <input type="text" id="title" name="title" class="form-control" placeholder="Enter the name of object" autocomplete="off"/>
                        <br>
                        <input type="text" id="startingPrice" name="minimumStartingPrice" class="form-control" placeholder="Minimum of starting price" autocomplete="off"/>
                        <br>
                        <input type="text" id="startingPrice" name="maximumStartingPrice" class="form-control" placeholder="Maximum of starting price" autocomplete="off"/>
                        <br>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-block text-center">search</button>
                         </div>
                    </div>
                    
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

    <br><br><br><br>
    <div>
        <% if (objects && objects.length > 0) { %>
        <h1 class="category-title">Objects:</h1>
        <div class="category-container">
            <div class="object-list">
                <% objects.forEach((object) => { %>
                <a
                    href="/objects/<%= object._id %>"
                    style="color: inherit; text-decoration: none"
                >
                    <div class="object-container">
                        <div class="object-image-container">
                            <img
                                src="<%= '/uploads/' + object.image %>"
                                alt="<%= object.title %>"
                            />
                        </div>
                        <div class="object-details-container">
                            <h2 class="object-title"><%= object.title %></h2>
                            <p class="object-description">
                                <%= object.description %>
                            </p>
                            <p class="object-price">
                                <%= object.startingPrice %> DZD
                            </p>
                        </div>
                    </div>
                </a>
                <br><br>
                <% }); %>
            </div>
        </div>
        <% } else { %>
        <h1 class="category-title">Category empty</h1>
        <% } %>
    </div> 
</div>
<%- include ("./partials/footer") %>


<style>
    .category-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .category-title {
        margin-top: 10px;
        font-size: 36px;
        font-weight: bold;
        text-align: center;
    }

    .object-list {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        grid-gap: 20px;
    }

    .object-container {
        background-color: #fff;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        border-radius: 5px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .object-container:hover {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        cursor: pointer;
    }

    .object-image-container {
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .object-image-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .object-details-container {
        padding: 20px;
    }

    .object-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .object-description {
        margin-bottom: 10px;
    }

    .object-price {
        font-size: 20px;
        font-weight: bold;
    }
</style>
